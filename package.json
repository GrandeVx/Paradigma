{
  "name": "balance",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "rimraf": "^5.0.10"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "dev": "pnpm copy-styles && dotenv -e ./apps/mobile/.env -- turbo dev --parallel",
    "db-push": "cd ./packages/db && pnpm run db-push",
    "db-seed": "cd ./packages/db && pnpm run seed",
    "db-studio": "cd ./packages/db && pnpm run studio",
    "copy-styles": "cp packages/styles/src/styles/global.css apps/mobile/global.css"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rimraf": "^5.0.10",
    "superjson": "^2.0.0",
    "turbo": "^1.13.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "core-js",
      "esbuild",
      "puppeteer",
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "prisma"
    ],
    "overrides": {
      "superjson": "^2.0.0"
    }
  },
  "packageManager": "pnpm@9.7.0"
}